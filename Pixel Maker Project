// Select color input
var colorPicker = document.getElementById("colorPicker").value; //sets the color as a value

// Select size input
let inputHeight = document.getElementById("inputHeight").value; //sets the height input to a value
    
let inputWidth = document.getElementById("inputWidth").value;  // sets the width input to a value
    
let chooseGridSize = document.getElementById("sizePicker");
    sizePicker.addEventListener('submit', function(event) {
        event.preventDefault();
        makeGrid();
});
// When size is submitted by the user, call makeGrid()

var table = document.getElementById("pixelCanvas");

function makeGrid() {
table.innerHTML = ""; //sets the interactive HTML content inside the table
    for(let w = 0; w < inputWidth; w++); //two 'for' loops to create the rows and columns of the table
        row = table.insertRow();
    for(let h = 0; h < inputHeight; h++);
        row.insertCell();
            cell = colorPicker; //sets the cell color according to user's choice
            
pixelCanvas.appendChild(makeGrid('table'));
document.body.appendChild(table);
};
